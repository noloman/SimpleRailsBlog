<!DOCTYPE html>
<html>
  <head>
    <title>SimpleBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
    <%= yield %>
  </body>
</html>
